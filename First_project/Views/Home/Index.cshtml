@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr class="header">
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>

            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Author</p></td>
                    <td><p>@b.Price</p></td>
                    <td><button onClick='location.href="/Home/Edit/@b.Id"'>Редактировать</button></td>
                    <td><button onClick='location.href="/Home/Delete/@b.Id"'>Удалить</button></td>
                </tr>
            }
        </table>
        <button onClick='location.href="/Home/Create"'>Добавить</button>
    </div>
