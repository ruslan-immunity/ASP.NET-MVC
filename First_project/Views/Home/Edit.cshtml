@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Редактирование книги</h3>
    <form method="post" action="">
        <input type="hidden" value="@ViewBag.Id" name="Id" />
        <table>
            <tr>
                <td><p>Название книги:</p></td>
                <td><input type="text" value="@ViewBag.Name" name="Name"/> </td>
            </tr>
            <tr>
                <td><p>Автор:</p></td>
                <td><input type="text" value="@ViewBag.Author" name="Author"/></td>
            </tr>
            <tr>
                <td><p>Цена:</p></td>
                <td><input type="text" value="@ViewBag.Price" name="Price"/></td>
            </tr>
            <tr><td><input type="submit" value="Сохранить" /> </td><td></td></tr>
        </table>
    </form>
</div>
